<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frm_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.upb.cartavirtual.frmMain"
    android:background="@color/colorFondo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Koch Online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:id="@+id/txtTitulo"
            tools:fontFamily="cursive"
            tools:textColor="@color/colorTitulo"
            tools:textSize="54sp" />

        <Button
            android:text="Chef"
            android:layout_width="140dp"
            android:id="@+id/btnPedidos"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/txtTitulo"
            android:layout_alignStart="@+id/btnMesero"
            android:layout_height="50dp"
            tools:textSize="20sp"
            tools:fontFamily="serif" />

        <Button
            android:text="Clientes"
            android:layout_width="140dp"
            android:id="@+id/btnActualizar"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/btnMesero"
            android:layout_alignStart="@+id/btnPedidos"
            android:layout_height="50dp"
            tools:textSize="20sp"
            tools:fontFamily="serif" />

        <Button
            android:text="Clientes"
            android:layout_width="140dp"
            android:id="@+id/button2"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/btnMesero"
            android:layout_alignStart="@+id/btnPedidos"
            android:layout_height="50dp"
            tools:textSize="20sp"
            tools:fontFamily="serif" />

        <Button
            android:text="Mesero"
            android:layout_width="140dp"
            android:layout_marginTop="13dp"
            android:id="@+id/btnMesero"
            android:layout_below="@+id/btnPedidos"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            tools:textSize="20sp"
            tools:fontFamily="serif" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_mylocation"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/ibtnUbicacion" />

    </RelativeLayout>

</RelativeLayout>
